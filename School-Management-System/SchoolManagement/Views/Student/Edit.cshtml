@model SchoolManagement.Models.Table

@{
    ViewBag.Title = "Edit";
}

<div class="container mt-5">
    <h2 class="text-center mb-4">Edit Student Information</h2>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

<div class="card p-4 shadow-sm">
    <h4 class="mb-3 text-primary">Student Details</h4>
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.StudentId)

    <div class="mb-3">
        @Html.LabelFor(model => model.StudentName, htmlAttributes: new { @class = "form-label" })
        @Html.EditorFor(model => model.StudentName, new { htmlAttributes = new { @class = "form-control" } })
        @Html.ValidationMessageFor(model => model.StudentName, "", new { @class = "text-danger" })
    </div>

    <div class="mb-3">
        @Html.LabelFor(model => model.StudentSurname, htmlAttributes: new { @class = "form-label" })
        @Html.EditorFor(model => model.StudentSurname, new { htmlAttributes = new { @class = "form-control" } })
        @Html.ValidationMessageFor(model => model.StudentSurname, "", new { @class = "text-danger" })
    </div>

    <div class="mb-3">
        @Html.LabelFor(model => model.StudentMail, htmlAttributes: new { @class = "form-label" })
        @Html.EditorFor(model => model.StudentMail, new { htmlAttributes = new { @class = "form-control" } })
        @Html.ValidationMessageFor(model => model.StudentMail, "", new { @class = "text-danger" })
    </div>

    <div class="mb-3">
        @Html.LabelFor(model => model.StudentPicture, htmlAttributes: new { @class = "form-label" })
        @Html.EditorFor(model => model.StudentPicture, new { htmlAttributes = new { @class = "form-control" } })
        @Html.ValidationMessageFor(model => model.StudentPicture, "", new { @class = "text-danger" })
    </div>

    <div class="mb-3">
        @Html.LabelFor(model => model.StudentAdress, htmlAttributes: new { @class = "form-label" })
        @Html.EditorFor(model => model.StudentAdress, new { htmlAttributes = new { @class = "form-control" } })
        @Html.ValidationMessageFor(model => model.StudentAdress, "", new { @class = "text-danger" })
    </div>

    <div class="text-end">
        <input type="submit" value="Save Changes" class="btn btn-success" />
        <a href="@Url.Action("Index")" class="btn btn-secondary ms-2">Back to List</a>
    </div>
</div>
    }
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}

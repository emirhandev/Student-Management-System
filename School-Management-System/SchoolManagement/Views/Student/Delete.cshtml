@model SchoolManagement.Models.Table

@{
    ViewBag.Title = "Delete";
}

<div class="container mt-5">
    <h2 class="text-center mb-4">Delete Student</h2>

    <div class="alert alert-warning text-center">
        <h4 class="alert-heading">Are you sure you want to delete this student?</h4>
        <p>This action cannot be undone!</p>
    </div>

    <div class="card shadow-sm">
        <div class="card-body">
            <h4 class="card-title text-center">Student Information</h4>
            <hr />
            <dl class="row">
                <dt class="col-sm-4"> @Html.DisplayNameFor(model => model.StudentName) </dt>
                <dd class="col-sm-8"> @Html.DisplayFor(model => model.StudentName) </dd>

                <dt class="col-sm-4"> @Html.DisplayNameFor(model => model.StudentSurname) </dt>
                <dd class="col-sm-8"> @Html.DisplayFor(model => model.StudentSurname) </dd>

                <dt class="col-sm-4"> @Html.DisplayNameFor(model => model.StudentMail) </dt>
                <dd class="col-sm-8"> @Html.DisplayFor(model => model.StudentMail) </dd>

                <dt class="col-sm-4"> @Html.DisplayNameFor(model => model.StudentPicture) </dt>
                <dd class="col-sm-8"> @Html.DisplayFor(model => model.StudentPicture) </dd>

                <dt class="col-sm-4"> @Html.DisplayNameFor(model => model.StudentAdress) </dt>
                <dd class="col-sm-8"> @Html.DisplayFor(model => model.StudentAdress) </dd>
            </dl>
        </div>
    </div>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="text-center mt-4">
            <button type="submit" class="btn btn-danger btn-lg">Delete</button>
            @Html.ActionLink("Back to List", "Index", null, new { @class = "btn btn-secondary btn-lg ms-2" })
        </div>
    }
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}

@model SchoolManagement.Models.Table

@{
    ViewBag.Title = "Create";
}

<h3 class="text-center my-4">Create New Student</h3>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-8">
                @Html.ValidationSummary(true, "", new { @class = "alert alert-danger" })
                <div class="mb-3">
                    @Html.LabelFor(model => model.StudentName, htmlAttributes: new { @class = "form-label" })
                    @Html.EditorFor(model => model.StudentName, new { htmlAttributes = new { @class = "form-control",Placeholder="Enter the Name",Required= "" } })
                    @Html.ValidationMessageFor(model => model.StudentName, "", new { @class = "text-danger" })
                </div>

                <div class="mb-3">
                    @Html.LabelFor(model => model.StudentSurname, htmlAttributes: new { @class = "form-label" })
                    @Html.EditorFor(model => model.StudentSurname, new { htmlAttributes = new { @class = "form-control", Placeholder = "Enter the Surname", Required = "" } })
                    @Html.ValidationMessageFor(model => model.StudentSurname, "", new { @class = "text-danger" })
                </div>

                <div class="mb-3">
                    @Html.LabelFor(model => model.StudentMail, htmlAttributes: new { @class = "form-label" })
                    @Html.EditorFor(model => model.StudentMail, new { htmlAttributes = new { @class = "form-control", Placeholder = "Enter the Mail", Required = "" } })
                    @Html.ValidationMessageFor(model => model.StudentMail, "", new { @class = "text-danger" })
                </div>

                <div class="mb-3">
                    @Html.LabelFor(model => model.StudentPicture, htmlAttributes: new { @class = "form-label" })
                    @Html.EditorFor(model => model.StudentPicture, new { htmlAttributes = new { @class = "form-control", Placeholder = "Enter the picture link", Required = "" } })
                    @Html.ValidationMessageFor(model => model.StudentPicture, "", new { @class = "text-danger" })
                </div>

                <div class="mb-3">
                    @Html.LabelFor(model => model.StudentAdress, htmlAttributes: new { @class = "form-label" })
                    @Html.EditorFor(model => model.StudentAdress, new { htmlAttributes = new { @class = "form-control", Placeholder = "Enter the Address", Required = "" } })
                    @Html.ValidationMessageFor(model => model.StudentAdress, "", new { @class = "text-danger" })
                </div>

                <div class="text-center">
                    <button type="submit" class="btn btn-primary btn-lg">Create</button>
                </div>
            </div>
        </div>
    </div>
}

<div class="text-center mt-3">
    @Html.ActionLink("Back to Student List", "Index", null, new { @class = "btn btn-secondary" })
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}

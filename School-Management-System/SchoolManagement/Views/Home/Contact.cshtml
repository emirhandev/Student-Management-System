@{
    ViewBag.Title = "Contact";
}
<main aria-labelledby="title" style="max-width: 600px; margin: auto; padding: 20px; display: flex; align-items: flex-start;">
    <img src="https://avatars.githubusercontent.com/u/97605841?v=4" alt="Emirhan ÖNDER" style="max-width: 250px; height: auto; margin-right: 20px; border-radius: 10px; box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1); flex-shrink: 0; display: block;" />

